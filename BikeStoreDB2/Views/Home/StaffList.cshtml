@model IEnumerable<BikeStoreDB2.Models.staffs>
<br />
<h2 style="color: gold; background-color: darkblue; text-align: center; font-family: monospace">Çalışanlar Listesi</h2>
<div style="padding-bottom: 10px">
    <a href="/Home/CreateStaff" class="btn btn-success">
        Yeni Çalışan Ekle
    </a>
</div>
<style>
    body {
        background-size: 10000px;
        background-image: url('../../images/hand-painted-watercolor-background-with-sky-clouds-shape.jpg');
        background-repeat: repeat;
        background-attachment: scroll;
        background-color: white;
    }

    ::-webkit-scrollbar {
        width: 20px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        box-shadow: inset 0 0 5px grey;
        border-radius: 10px;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: brown;
        border-radius: 10px;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: sandybrown;
        }
</style>

<table class="table">
    <tr style="background-color:darkslategray;color:whitesmoke">
        <th>
            @Html.DisplayNameFor(model => model.first_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.last_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.staffs2.first_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stores.store_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="background-color:lightpink">
                @Html.DisplayFor(modelItem => item.first_name)
            </td>
            <td style="background-color:skyblue">
                @Html.DisplayFor(modelItem => item.last_name)
            </td>
            <td style="background-color:lightpink">
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td style="background-color: skyblue">
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td style="background-color:lightpink">
                @Html.DisplayFor(modelItem => item.active)
            </td>
            <td style="background-color: skyblue">
                @Html.DisplayFor(modelItem => item.staffs2.first_name)
            </td>
            <td style="background-color:lightpink">
                @Html.DisplayFor(modelItem => item.stores.store_name)
            </td>
            <td style="background-color: skyblue">
                <a href="/Home/DeleteStaff?id=@item.staff_id" class="btn btn-danger btn-sm">Sil</a>
                <a href="/Home/EditStaff?id=@item.staff_id" class="btn btn-primary btn-sm">Düzenle</a>
                <a href="/Home/DetailStaff?id=@item.staff_id" class="btn btn-warning btn-sm">Detay</a>
            </td>
        </tr>
    }

</table>
