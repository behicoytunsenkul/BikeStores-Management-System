@model IEnumerable<BikeStoreDB2.Models.brands>

@{
    ViewBag.Title = "BrandList";
}

<h2 style="color: gold; background-color: darkblue; text-align: center; font-family: monospace">Marka Listesi</h2>
<style>
    body {
        background-size: 10000px;
        background-image: url('../../images/hand-painted-watercolor-background-with-sky-clouds-shape.jpg');
        background-repeat: repeat;
        background-attachment: scroll;
        background-color: white;
    }
    ::-webkit-scrollbar {
        width: 20px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        box-shadow: inset 0 0 5px grey;
        border-radius: 10px;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: brown;
        border-radius: 10px;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: sandybrown;
        }
</style>

<table class="table">
    <tr style="background-color:yellowgreen;color:orangered">
        <th> 
            @Html.DisplayNameFor(model => model.brand_name)
        </th>
        <th>İşlemler</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="background-color:burlywood">
            @Html.DisplayFor(modelItem => item.brand_name)
        </td>
        <td style="background-color:lightpink">

            <a href="/Home/DeleteBrand?id=@item.brand_id" class="btn btn-danger btn-sm">Sil</a>
            <a href="/Home/EditBrand?id=@item.brand_id" class="btn btn-primary btn-sm">Düzenle</a>
        </td>
    </tr>
}

</table>
