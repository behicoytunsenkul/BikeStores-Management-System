
@{
    ViewBag.Title = "Çalışan Detay";
}

<h2 class="text-center">Çalışan Detay</h2>
<style>
    body {
        background-size: 10000px;
        background-image: url('../../images/hand-painted-watercolor-background-with-sky-clouds-shape.jpg');
        background-repeat: repeat;
        background-attachment: scroll;
        background-color: white;
    }

    ::-webkit-scrollbar {
        width: 20px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        box-shadow: inset 0 0 5px grey;
        border-radius: 10px;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: brown;
        border-radius: 10px;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: sandybrown;
        }
</style>
<form method="post" action="/Home/CreateStaff">
    <div class="container">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="StaffID" class="control-label">Müdür seçiniz :</label>
                <select class="form-control" name="manager_id" id="StaffID">
                    @if (Model.managerList != null && Model.managerList.Count > 0)
                    {
                        foreach (var item in Model.managerList)
                        {
                            <option selected value="@item.staff_id">@item.first_name @item.last_name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="StoreID" class="control-label">Mağaza Seçiniz :</label>
                <select class="form-control" name="store_id" id="StoreID">
                    @if (Model.storeList != null && Model.storeList.Count > 0)
                    {
                        foreach (var item in Model.storeList)
                        {
                            <option selected value="@item.store_id">@item.store_name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="first_name">Çalışan Adı</label>
                <input id="first_name" name="first_name" type="text" class="form-control" value="@Model.staff.first_name"></input>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="last_name">Çalışan Soyadı</label>
                <input id="last_name" name="last_name" type="text" class="form-control" value="@Model.staff.last_name"></input>
            </div>
            <div class="form-group col-md-4">
                <label for="email">Email</label>
                <input id="email" name="email" type="text" class="form-control" value="@Model.staff.email"></input>
            </div>
            <div class="form-group col-md-4">
                <label for="phone">Telefon</label>
                <input id="phone" name="phone" type="text" class="form-control" value="@Model.staff.phone"></input>
            </div>
        </div>

    </div>

</form>

