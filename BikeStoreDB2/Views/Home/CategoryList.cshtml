@model IEnumerable<BikeStoreDB2.Models.categories>

@{
    ViewBag.Title = "CategoryList";
}

<h2 style="color: gold; background-color: darkblue; text-align: center; font-family: monospace">Kategoriler</h2>
<style>
    body {
        background-size: 10000px;
        background-image: url('../../images/hand-painted-watercolor-background-with-sky-clouds-shape.jpg');
        background-repeat: repeat;
        background-attachment: scroll;
        background-color: white;
    }

    ::-webkit-scrollbar {
        width: 20px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        box-shadow: inset 0 0 5px grey;
        border-radius: 10px;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: brown;
        border-radius: 10px;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: sandybrown;
        }
</style>

<table style="background-color:darkorange;color:white" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.category_name)
        </th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="background-color: greenyellow;color:black;border-color:saddlebrown">
                @Html.DisplayFor(modelItem => item.category_name)
            </td>
            <td style="background-color: neon;border-color:saddlebrown">

                <a href="/Home/DeleteCategory?id=@item.category_id" class="btn btn-danger btn-sm">Sil</a>
                <a href="/Home/EditCategory?id=@item.category_id" class="btn btn-primary btn-sm">Düzenle</a>
            </td>
        </tr>
    }

</table>
