
@{
    ViewBag.Title = "CreateProduct";
}

<h2>Ürün Ekle</h2>
<style>
    body {
        background-size: 10000px;
        background-image: url('../../images/hand-painted-watercolor-background-with-sky-clouds-shape.jpg');
        background-repeat: repeat;
        background-attachment: scroll;
        background-color: white;
    }

    ::-webkit-scrollbar {
        width: 20px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        box-shadow: inset 0 0 5px grey;
        border-radius: 10px;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: brown;
        border-radius: 10px;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: sandybrown;
        }
</style>
<form method="post" action="/Home/CreateProduct">
    <div class="form-group">
        <label for="product_name">Ürün Adı</label>
        <input id="product_name" name="product_name" type="text" class="form-control"></input>
    </div>
    <div class="form-group">
        <label for="list_price">Fiyat</label>
        <input id="list_price" name="list_price" type="text" class="form-control"></input>
    </div>
    <div class="form-group">
        <label for="model_year">Yıl</label>
        <input id="model_year" name="model_year" type="text" class="form-control"></input>
    </div>
    <div class="form-group">
        <label for="BrandID" class="control-label">Marka Seçiniz :</label>
        <select class="form-control" name="brand_id" id="BrandID">
            @foreach (var itemBrand in Model.brandList)
            {
                <option value="@itemBrand.brand_id">@itemBrand.brand_name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="CategoryID" class="control-label">Kategori Seçiniz :</label>
        <select class="form-control" name="category_id" id="CategoryID">
            @foreach (var itemCategory in Model.categoryList)
            {
                <option value="@itemCategory.category_id">@itemCategory.category_name</option>
            }
        </select>
    </div>
    <button type="submit">
        Kaydet
    </button>
</form>

