
@{
    ViewBag.Title = "Yeni Sipariş Oluştur";
}
<style>
    body {
        background-size: 10000px;
        background-image: url('../../images/hand-painted-watercolor-background-with-sky-clouds-shape.jpg');
        background-repeat: repeat;
        background-attachment: scroll;
        background-color: white;
    }

    ::-webkit-scrollbar {
        width: 20px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        box-shadow: inset 0 0 5px grey;
        border-radius: 10px;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: brown;
        border-radius: 10px;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: sandybrown;
        }
</style>
<h2 class="text-center">Sipariş Oluştur</h2>

<form method="post" action="/Home/CreateOrder">
    <div class="container">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="CustomerID" class="control-label">Müşteri Seçiniz :</label>
                <select class="form-control" name="customer_id" id="CustomerID">
                    <option selected>Seçiniz</option>
                    @foreach (var item in Model.customerList)
                    {
                        <option value="@item.customer_id">@item.first_name @item.last_name</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="CategoryID" class="control-label">Çalışan Seçiniz :</label>
                <select class="form-control" name="staff_id" id="CategoryID">
                    <option selected>Seçiniz</option>
                    @foreach (var item in Model.staffList)
                    {
                        <option value="@item.staff_id">@item.first_name @item.last_name</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="ProductID" class="control-label">Ürün Seçiniz :</label>
                <select class="form-control" name="product_id" id="ProductID">
                    <option selected>Seçiniz</option>
                    @foreach (var item in Model.productList)
                    {
                        <option value="@item.product_id">@item.product_name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="quantity">Adet</label>
                <input id="quantity" name="quantity" type="text" class="form-control"></input>
            </div>
            <div class="form-group col-md-4">
                <label for="StoreID" class="control-label">Mağaza Seçiniz :</label>
                <select class="form-control" name="store_id" id="StoreID">
                    <option selected>Seçiniz</option>
                    @foreach (var item in Model.storeList)
                    {
                        <option value="@item.store_id">@item.store_name</option>
                    }
                </select>
            </div>
        </div>

        <button type="submit" class="btn btn-success btn-lg btn-block">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus" viewBox="0 0 16 16">
                <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5z" />
                <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z" />
            </svg>
            Oluştur
        </button>

    </div>

</form>

