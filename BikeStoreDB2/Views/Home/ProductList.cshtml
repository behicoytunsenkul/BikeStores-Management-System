@model List<BikeStoreDB2.Models.products>

@{
    ViewBag.Title = "Ürünler";
}

<h2 style="color: gold; background-color: darkblue; text-align: center; font-family: monospace">Ürün Listesi</h2>
<style>
    body {
        background-size: 10000px;
        background-image: url('../../images/hand-painted-watercolor-background-with-sky-clouds-shape.jpg');
        background-repeat: repeat;
        background-attachment: scroll;
        background-color: white;
    }
    ::-webkit-scrollbar {
        width: 20px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        box-shadow: inset 0 0 5px grey;

        border-radius: 10px;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: brown;
    
        border-radius: 10px;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: sandybrown;
        }
</style>

<div style="padding-bottom: 10px">
    <a href="/Home/CreateProduct" class="btn btn-success">
        Ürün Ekle
    </a>
</div>

<div class="table-responsive">

    <table class="table table-bordered table-striped ">
        <thead>
            <tr style="background-color:darkslateblue;color:white">
                <th>
                    ÜRÜN ADI
                </th>
                <th>
                    YIL
                </th>
                <th>
                    FIYAT
                </th>
                <th>
                    MARKA
                </th>
                <th>
                    KATAGORİ
                </th>
                <th>Aksiyonlar</th>
            </tr>
        </thead>


        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tbody>
                <td style="background-color: mediumturquoise">
                    @Html.DisplayFor(modelItem => item.product_name)
                </td>
                <td style="background-color:pink">
                    @Html.DisplayFor(modelItem => item.model_year)
                </td>
                <td style="background-color: mediumturquoise">
                    @Html.DisplayFor(modelItem => item.list_price)
                </td>
                <td style="background-color: pink">
                    @Html.DisplayFor(modelItem => item.brands.brand_name)
                </td>
                <td style="background-color: mediumturquoise">
                    @Html.DisplayFor(modelItem => item.categories.category_name)
                </td>
                <td style="background-color: pink">

                    <a href="/Home/DeleteProduct?id=@item.product_id" class="btn btn-danger btn-sm">Sil</a>
                </td>
                </tbody>
            }

        }

    </table>
</div>
